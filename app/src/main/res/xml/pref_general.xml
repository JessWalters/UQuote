<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="type_quotes"
        android:title="@string/pref_title_typequotes"
        android:defaultValue="1"
        android:entries="@array/pref_quotetype"
        android:entryValues="@array/pref_type_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <CheckBoxPreference
        android:key="split_faves"
        android:title="@string/pref_title_separatedfaves"
        android:defaultValue="false" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->

</PreferenceScreen>
